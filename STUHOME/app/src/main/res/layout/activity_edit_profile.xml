<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:background="#F6F4F4"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="#0D423B">

            <TextView
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/white"
                android:textSize="18dp">
            </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/chen"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="90dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/green2"
                android:text="Change img"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:id="@+id/changeProfileimg">
            </androidx.appcompat.widget.AppCompatButton>
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="40dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:hint="Edit your name.."
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#DD272626"
                    android:textColorHint="#DD8E8B8B"
                    android:id="@+id/edit_name"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:hint="Edit your surname.."
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#DD272626"
                    android:textColorHint="#DD8E8B8B"
                    android:id="@+id/edit_surname"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:hint="Edit your description.."
                    android:maxLines="3"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#DD272626"
                    android:textColorHint="#DD8E8B8B"
                    android:id="@+id/edit_description"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:hint="Edit your studies.."
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#DD272626"
                    android:textColorHint="#DD8E8B8B"
                    android:id="@+id/edit_studies"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <EditText
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_back_dark_blue5_15"
                    android:hint="Edit your direccion.."
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#DD272626"
                    android:textColorHint="#DD8E8B8B"
                    android:id="@+id/edit_direccion"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="300dp"
            android:layout_height="55dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/round_back_green_15"
            android:text="Save Changes"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/profile_save_changesBtn"
            />
    </RelativeLayout>


</LinearLayout>